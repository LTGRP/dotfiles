# Usage-based bash settings

# Unlimited history
export HISTSIZE=''
export HISTFILESIZE=''
# Ignore both duplicate entries and entries preceeded by empty space
export HISTCONTROL=ignoreboth
# Vim ftw
export EDITOR=vim
# Specify 256 color TERM
export TERM=xterm-256color
# Add home bin to PATH
export PATH=$PATH:$HOME/.bin

# shopts
shopt -s globstar


